{
  "id": "META-MAC-04",
  "title": "Detect lockfile hash mismatch for macro package expansion",
  "feature": "macro expansion sandbox diagnostics",
  "bucket": "diagnostics",
  "profile": "strict",
  "references": [
    "spec/CONFORMANCE_PROFILE_CHECKLIST.md#e-3-10",
    "spec/PART_10_METAPROGRAMMING_DERIVES_MACROS_PROPERTY_BEHAVIORS.md#part-10-5",
    "spec/PART_10_METAPROGRAMMING_DERIVES_MACROS_PROPERTY_BEHAVIORS.md#part-10-6",
    "spec/PART_12_DIAGNOSTICS_TOOLING_TESTS.md#part-12"
  ],
  "source": "@objc_macro(package=\"SafeFmt\", version=\"2.4.1\", lockfile=\"objc3.lock\")\\nint lockfile_drift(int value) {\\n    return value;\\n}\\n",
  "expect": {
    "parse": "accept",
    "diagnostics": [
      {
        "code": "OBJC3-D-MACRO-LOCKFILE-MISMATCH",
        "severity": "error",
        "span": {
          "start": { "line": 1, "column": 1 },
          "end": { "line": 1, "column": 71 }
        },
        "message": "macro package checksum does not match lockfile entry",
        "fixits": [
          {
            "range": {
              "start": { "line": 1, "column": 1 },
              "end": { "line": 1, "column": 71 }
            },
            "replacement": "@objc_macro(package=\"SafeFmt\", version=\"2.4.1\", lockfile=\"objc3.lock\", checksum=\"sha256:7f90b0\")"
          }
        ]
      }
    ]
  }
}
